<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<% if @task.completed == true %>
  <i class="fas fa-check-square"></i>
<% else %>
  <i class="fas fa-square"></i>
<% end %>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit this Task", edit_task_path %>
<%= link_to "Delete this Task", delete_task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>

<h3>My tasks</h3>

<% @tasks.each do |task| %>
  <li>
    <% if task.completed == true %>
      <i class="fas fa-check-square"></i>
    <% else %>
      <i class="fas fa-square"></i>
    <% end %>
    <h4><%= link_to task.title, task_path(task) %></h4>
    <p>-> <%= task.details %> [<%= task.completed %>]</p>
  </li>
<% end %>

<%= link_to "Add new Task", tasks_new_path %>

